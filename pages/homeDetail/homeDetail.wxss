.homeDetailWrap{
  width: 100%;
  height: 100%;
  background: #f2f2f2;

}
.homeDetBanner{
  height: 748rpx;
  background: #ffffff;
}
.homeDetailTop{
  width: 100%;
  background: #ffffff;
}
.homeDetTitle{
  width: 100%;
  font-size:32rpx;
  padding: 0 32rpx;
  margin-bottom: 28rpx;
  box-sizing: border-box;
}
.price{
  width: 100%;
  padding: 0 32rpx;
  position: relative;
}
.price text:nth-of-type(1){
  font-size: 40rpx;
  color: red;
}
.price text:nth-of-type(2){
  margin-left: 10rpx;
  text-decoration: line-through;
  font-size: 32rpx;
  color: rgb(202, 196, 196);
}
.price text:nth-of-type(3){
  position: absolute;
  margin-left: 10rpx;
  font-size: 26rpx;
  color: rgb(202, 196, 196);
}
.price image:nth-of-type(1){
  right: 220rpx;

  position: absolute;
width: 55rpx;
height: 55rpx;
}
.price image:nth-of-type(2){
  right: 140rpx;
  position: absolute;
width: 55rpx;
height: 55rpx;
}
.homeDetTip{
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 0 32rpx;
  font-size: 30rpx;
}
.imgDetail{
  width: 100%;
  margin-top: 20rpx;
  background: #ffffff;
}
.imgDetailTitle{
  padding: 20rpx 15rpx;
}
